<view class="demo-list">
  <view class="demo">
    <view class="title">基本用法</view>
    <view class="content">
      <stepper value="{{value1}}" bindchange="changeValue1"></stepper>
    </view>
  </view>

  <view class="demo">
    <view class="title">设置最大值和最小值</view>
    <view class="content">
      最大为10：
      <stepper value="{{value2}}" max="{{10}}" bindchange="changeValue2"></stepper>
      最小值为5：
      <stepper value="{{value3}}" min="{{5}}" bindchange="changeValue3"></stepper>
    </view>
  </view>

  <view class="demo">
    <view class="title">禁用组件</view>
    <view class="content">
      <stepper value="{{3}}" disabled></stepper>
    </view>
  </view>

  <view class="demo">
    <view class="title">禁用输入框</view>
    <view class="content">
      <stepper value="{{value4}}" input-disabled bindchange="changeValue4"></stepper>
    </view>
  </view>
</view>
