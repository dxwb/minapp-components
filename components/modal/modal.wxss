.modal{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  animation-duration: .3s;
  animation-fill-mode: forwards;
}

.modal__mask{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .6);
}

.modal__main{
  position: absolute;
  background-color: #fff;
  font-size: 16px;
  animation-duration: .3s;
  animation-fill-mode: forwards;
}

.modal--center{
  top: 50%;
  left: 50%;
  width: 60%;
  max-height: 80%;
  transform: translate(-50%, -50%);
}

.modal--top{
  top: 0;
  left: 0;
  right: 0;
}

.modal--bottom{
  left: 0;
  right: 0;
  bottom: 0;
}

.modal--left{
  top: 0;
  left: 0;
  bottom: 0;
}

.modal--right{
  top: 0;
  right: 0;
  bottom: 0;
}

@keyframes fadeIn{
  from{
    opacity: 0;
  }

  to{
    opacity: 1;
  }
}

@keyframes fadeOut{
  from{
    opacity: 1;
  }

  to{
    opacity: 0;
  }
}

@keyframes top-enter{
  from{
    transform: translateY(-100%);
  }

  to{
    transform: translateY(0);
  }
}

@keyframes top-leave{
  from{
    transform: translateY(0);
  }

  to{
    transform: translateY(-100%);
  }
}

@keyframes bottom-enter{
  from{
    transform: translateY(100%);
  }

  to{
    transform: translateY(0);
  }
}

@keyframes bottom-leave{
  from{
    transform: translateY(0);
  }

  to{
    transform: translateY(100%);
  }
}

@keyframes left-enter{
  from{
    transform: translateX(-100%);
  }

  to{
    transform: translateX(0);
  }
}

@keyframes left-leave{
  from{
    transform: translateX(0);
  }

  to{
    transform: translateX(-100%);
  }
}

@keyframes right-enter{
  from{
    transform: translateX(100%);
  }

  to{
    transform: translateX(0);
  }
}

@keyframes right-leave{
  from{
    transform: translateX(0);
  }

  to{
    transform: translateX(100%);
  }
}
